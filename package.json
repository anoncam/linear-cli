{
  "name": "@anoncam/linear-cli",
  "version": "1.0.5",
  "description": "Command-line interface for Linear API with cross-team reporting and AI-assisted label management",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --skipLibCheck",
    "build:ignore": "tsc --skipLibCheck --noEmitOnError false",
    "build:strict": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --passWithNoTests",
    "rebuild-lockfile": "rm -f package-lock.json && npm i --package-lock-only --legacy-peer-deps",
    "prepare-cli": "tsc --skipLibCheck --noEmitOnError false && chmod +x ./dist/scripts/linearCli.js && npm link",
    "cli": "ts-node scripts/linearCli.ts",
    "demo": "ts-node src/kanban/test.ts",
    "kanban": "ts-node src/kanban/enhancedKanban.ts",
    "relationships": "ts-node --transpile-only scripts/linearCli.ts relationships",
    "run-kanban": "./scripts/run-kanban.sh"
  },
  "bin": {
    "linear-cli": "./dist/scripts/linearCli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "linear",
    "graphql",
    "cli",
    "backlog"
  ],
  "author": "Cameron Banowsky <cameron@shebashio.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anoncam/linear-cli.git"
  },
  "bugs": {
    "url": "https://github.com/anoncam/linear-cli/issues"
  },
  "homepage": "https://github.com/anoncam/linear-cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "commonjs",
  "dependencies": {
    "@types/blessed": "^0.1.25",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.10",
    "axios": "^1.8.3",
    "blessed": "^0.1.81",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "glob": "^10.3.10",
    "graphql": "^16.10.0",
    "graphql-request": "^4.3.0",
    "neo-blessed": "^0.2.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "eslint": "8.56.0",
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "ts-jest": "29.2.6",
    "ts-node": "^10.9.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
